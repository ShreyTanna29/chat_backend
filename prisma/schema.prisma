generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                   String               @id @default(cuid())
  email                String               @unique
  password             String?
  googleId             String?              @unique
  appleId              String?              @unique
  name                 String
  avatar               String?
  isVerified           Boolean              @default(false)
  refreshToken         String?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  searchHistory        Json[]               @default([])
  preferences          Json                 @default("{\"theme\":\"auto\",\"language\":\"en\"}")
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  conversations        Conversation[]
  spaces               Space[]
  sharedConversations  SharedConversation[]
  reminders            Reminder[]

  @@map("users")
}

model Conversation {
  id                  String               @id @default(cuid())
  userId              String
  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  title               String               @default("New Chat")
  messages            Message[]
  sharedConversations SharedConversation[]
  spaceId             String?
  space               Space?               @relation(fields: [spaceId], references: [id], onDelete: SetNull)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt

  @@index([userId])
  @@index([spaceId])
  @@map("conversations")
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // "user" or "assistant"
  content        String       @db.Text
  metadata       Json?        @default("{}") // For storing model, tokens, images, etc.
  createdAt      DateTime     @default(now())

  @@index([conversationId])
  @@map("messages")
}

/// New: A Space groups conversations and provides an optional default system prompt
model Space {
  id            String         @id @default(cuid())
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  defaultPrompt String?        @db.Text
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@map("spaces")
}

/// SharedConversation: Stores share links for public conversation access
model SharedConversation {
  id             String       @id @default(cuid())
  shareId        String       @unique @db.VarChar(32)
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sharedBy       String
  user           User         @relation(fields: [sharedBy], references: [id])
  sharedAt       DateTime     @default(now())

  @@index([shareId])
  @@index([conversationId])
  @@map("shared_conversations")
}

/// Reminder: Stores scheduled reminders for users
model Reminder {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String // User-friendly title like "Daily Stock Updates"
  prompt    String    @db.Text // The original prompt like "give updates on the stock market daily at 5PM"
  aiPrompt  String    @db.Text // The actual prompt to send to AI
  schedule  String // Cron expression (e.g., "0 17 * * *" for daily at 5PM)
  timezone  String    @default("UTC") // User's timezone
  isActive  Boolean   @default(true)
  lastRun   DateTime?
  nextRun   DateTime?
  metadata  Json?     @default("{}") // Additional data like conversation settings
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@index([isActive])
  @@index([nextRun])
  @@map("reminders")
}
