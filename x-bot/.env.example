# Twitter/X API Credentials
# Get these from https://developer.twitter.com/en/portal/dashboard
# Note: BEARER_TOKEN is optional, OAuth 1.0a is used for authentication
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here

# Bot JWT Token (from your backend authentication)
# Login to your backend and get a JWT token for the bot user
BOT_JWT_TOKEN=your_jwt_token_here

# Backend Configuration
BACKEND_URL=http://localhost:3000

# Polling interval in milliseconds (default: 60000 = 1 minute)
TWITTER_POLL_INTERVAL=60000
